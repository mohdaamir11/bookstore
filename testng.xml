<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="FastAPI Automation Suite" verbose="1" parallel="false">

<listeners>
        <listener class-name="api.utilities.ExtentReportManager"/>
    </listeners>

    <!-- Auth: Sign up & Login -->
    <test name="User Auth Tests">
        <classes>
            <class name="api.test.UserTest"/>
        </classes>
    </test>

    <!-- Book Management -->
    <test name="Book API Tests">
        <classes>
            <class name="api.test.BookTest"/>
        </classes>
    </test>

</suite>
